<% include ../partials/header %>

	<header id="header" class="text-light text-center jumbotron">
		<h1>Campgrounds</h1>
		<p class="lead">View our hand-picked campgrounds from all over the world</p>
		<a class="btn-sm btn-primary" href="/campgrounds/new">Add Campground</a>
	</header>

	<div id="campgrounds" class="container">
		<div class="row">
			<div class="col-lg-12">
				<h3>Our Most Popular Campgrounds</h3>
			</div>
	<% 
	campgrounds.forEach(camp =>
	{
	%>	<div class="text-center my-3 col-lg-4 col-md-6 col-sm-12">
			<div class="card">
				<img class="card-img-top" src="<%= camp.image %>" onerror="this.onerror=null;this.src='<%= defaultImage %>';" alt="<%= camp.name %>">
				<div id="<%= camp.name %>" class="py-2 card-body">
					<h5 class="card-title"><%= camp.name %></h5>
					<h6 class="card-subtitle text-muted">3 miles away</h6>
				</div>
				<p>
					<a class="btn-sm btn-primary" href="/campgrounds/<%= camp._id %>">More Info</a>
				</p>
			</div>
		</div>
	<%
	});
	if (campgrounds.length < 1)
	{ %>
			<p class="text-muted mt-3 col-lg-12">No campgrounds to see here!</p>
	<% } %>
	
			
		</div>
	</div>

<% include ../partials/footer %>