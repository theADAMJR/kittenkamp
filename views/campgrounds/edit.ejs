<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<h1 class="col-lg-12 text-center mt-5">Edit '<%= campground.name %>'</h1>
			<div style="width: 45%; margin: 25px auto;">
				<form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="name">Name: </label>
						<input id="name" class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<label for="description">Description: </label>
						<textarea id="description" class="form-control" name="campground[description]" type="text"><%= campground.description %></textarea>
					</div>
					<div class="form-group">
						<label for="image">Image URL: </label>
						<input id="image" class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-success btn-block">Edit</button>
					</div>
				</form>
				<a href="/campgrounds/<%= campground.id %>">Cancel</a>
			</div>
		</div>
	</div>

<% include ../partials/footer %>