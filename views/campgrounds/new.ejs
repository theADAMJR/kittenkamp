<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<h1 class="col-lg-12 text-center mt-5">New Campground</h1>
			<div style="width: 45%; margin: 25px auto;">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<label>Name: </label>
						<input class="form-control" name="name" type="text" placeholder="<%= faker.address.streetName() %>" required>
					</div>
					<div class="form-group">
						<label>Price: </label>
						<input class="form-control" name="price" type="number" placeholder="Price" min="0.01" step="0.01">
					</div>
					<div class="form-group">
						<label>Description: </label>
						<textarea class="form-control" name="description" type="text" placeholder="This is a campground..."></textarea>
					</div>
					<div class="form-group">
						<label>Image URL: </label>
						<input class="form-control" name="image" type="text" placeholder="https://...">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Add</button>
					</div>
				</form>
				<a href="/campgrounds">Go back</a>
			</div>
		</div>
	</div>

<% include ../partials/footer %>